# Environment variables for Docker Compose deployment
# Copy this file to .env and update the values

# PostgreSQL Configuration
POSTGRES_DB=garmin_challenge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=garmin-challenge-postgres

# Backend Configuration
BACKEND_IMAGE=ghcr.io/tallmancycles/challenge/backend:1.1
BACKEND_CONTAINER_NAME=garmin-challenge-backend
BACKEND_PORT=8080

# Frontend Configuration  
FRONTEND_IMAGE=ghcr.io/tallmancycles/challenge/frontend:1.1
FRONTEND_CONTAINER_NAME=garmin-challenge-frontend
FRONTEND_PORT=3000

# Security Configuration
JWT_KEY=your_jwt_secret_key_here_make_it_long_and_secure
AUTH_SALT=your_auth_salt_here

# CORS Configuration
FRONTEND_ORIGIN_0=https://your-domain.com
FRONTEND_ORIGIN_1=http://localhost:3000

# Garmin OAuth Configuration
GARMINOAUTH_CONSUMER_KEY=your_garmin_consumer_key
GARMINOAUTH_CONSUMER_SECRET=your_garmin_consumer_secret
GARMINOAUTH_CALLBACK_URL=https://your-domain.com/auth/garmin/callback
GARMINOAUTH_REDIRECT_URL=https://your-domain.com/dashboard

# AWS Configuration (for email notifications)
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# FIT File Upload Configuration
UPLOAD_SECRET_KEY=your_fit_upload_secret_key

# Garmin Daily Fetch Configuration
GARMIN_DAILY_FETCH_RUN_ON_STARTUP=true