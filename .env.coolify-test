# Test Environment Variables for Coolify Docker Compose
# Copy this to .env when testing docker-compose.coolify-test.yml locally

# Backend Configuration
ASPNETCORE_ENVIRONMENT=Production
BACKEND_CONTAINER_NAME=garmin-challenge-backend
BACKEND_PORT=8080

# PostgreSQL Configuration (using local postgres service)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=garmin_challenge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_CONTAINER_NAME=garmin-challenge-postgres

# Authentication & Security (for testing only - use secure values in production)
JWT_KEY=TestKey123456789012345678901234567890123456789012345678901234567890
AUTH_SALT=TestSalt123!

# CORS Configuration (for local testing)
FRONTEND_ORIGIN_0=http://localhost:80
FRONTEND_ORIGIN_1=http://localhost:3000
FRONTEND_ORIGIN_2=http://localhost:5173

# Frontend Configuration
VITE_APP_API_ENDPOINT=http://localhost:8080
FRONTEND_CONTAINER_NAME=garmin-challenge-frontend
FRONTEND_PORT=80